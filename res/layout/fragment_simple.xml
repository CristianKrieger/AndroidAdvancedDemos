<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:textColor="@color/frag_simple_txt_title"
        android:padding="10dp"
        android:textStyle="bold"
        android:text="@string/frag_simple_title"
        android:background="@color/frag_simple_txt_title_background"
        android:gravity="center"/>
    <ScrollView android:layout_width="match_parent"
	        android:layout_height="match_parent">
	    <TextView android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:textSize="14sp"
	        android:textColor="@color/frag_simple_txt_description"
	        android:text="@string/frag_simple_description"/>
    </ScrollView>
</LinearLayout>
