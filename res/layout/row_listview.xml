<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp">
    <ImageView android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:id="@+id/listview_img"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_content_email"/>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/listview_img"
        android:layout_marginLeft="3dp"
        android:orientation="vertical">
        <TextView android:id="@+id/listview_txt_top"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#000"
	        android:textSize="14sp"
	        android:textStyle="bold"/>
        <TextView android:id="@+id/listview_txt_bottom"
            android:layout_marginTop="2dp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textColor="#696969"
	        android:textSize="11sp"
	        android:ellipsize="end"
	        android:maxLines="2"
	        android:textStyle="bold"/>
    </LinearLayout>
</RelativeLayout>
